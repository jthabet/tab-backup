{
  "manifest_version": 3,
  "version": "0.4",
  "name": "Tab manager",
  "description": "Import and export tabs as a json file.",
  "permissions": [
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "browser_style": true,
    "default_title": "Tab manager",
    "default_popup": "popup.html",
    "default_icon": "icons/tabler-icon-app-window-white.svg",
    "theme_icons": [
      {
        "light": "icons/tabler-icon-app-window-white.svg",
        "dark": "icons/tabler-icon-app-window-white.svg",
        "size": 16
      },
      {
        "light": "icons/tabler-icon-app-window-white.svg",
        "dark": "icons/tabler-icon-app-window-white.svg",
        "size": 32
      },
      {
        "light": "icons/tabler-icon-app-window-white.svg",
        "dark": "icons/tabler-icon-app-window-white.svg",
        "size": 64
      }
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}